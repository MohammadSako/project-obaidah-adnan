generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model items {
  id            String   @id @default(uuid()) @db.Uuid
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  title         String   @db.VarChar(255)
  color         String
  size          String
  price         String
  image         String
  alt           String
  gender        String
  type          String
  description   String
  details       String
  category      String
  dashboardType String
}

