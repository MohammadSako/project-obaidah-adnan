{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["./src/lib/*"],
      "@public/*": ["./public/*"],
      "@components/*": ["./src/components/*"]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/categories/[[...slug]]/page.js",
    "src/app/categories/women/page.js",
    "src/app/categories/mixed/page.js",
    "src/app/categories/men/page.js",
    "src/app/api/products.js",
    "src/lib/supabase.js",
    "src/app/page.tsx",
    "src/lib/db/products.js",
    "middleware.js",
    "src/lib/store.ts",
    "src/components/checkout/order-summary.tsx",
    "src/components/homescreen/best-sellers.js",
    "src/components/helpers/product.js",
    "src/components/helpers/favorite.js",
    "src/components/homescreen/new-arrivals.tsx",
    "src/components/UI/carouselFade.js",
    "src/components/helpers/navbar helpers/navigation-menu.js",
    "src/components/helpers/navbar helpers/nav-link.js"
, "src/lib/db/cloudinary.ts", "src/app/dashboard/components/data-table.tsx", "src/components/productDetail/productDetailPage.js", "src/app/search/page.js", "src/components/dashboard/images-list.js", "src/components/product-details/components/similar-items.js"  ],
  "exclude": ["node_modules"]
}
