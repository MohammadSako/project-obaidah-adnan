{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["./src/lib/*"],
      "@public/*": ["./public/*"],
      "@components/*": ["./src/components/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/categories/[id]/page.js", "src/app/categories/women/page.js", "src/app/categories/mixed/page.js", "src/app/categories/men/page.js", "src/app/api/products.js", "src/lib/supabase.js", "src/app/page.tsx", "src/lib/db/products.js", "middleware.js", "src/lib/store.ts"],
  "exclude": ["node_modules"]
}
